# ============================================================
# BANGLA VOICE AGENT - CONFIGURATION
# Copy this to .env and fill in your values
# Change providers by changing the PROVIDER variables below
# ============================================================

# === PROVIDER SELECTION (swap anytime) ===
STT_PROVIDER=google              # google | elevenlabs | deepgram | custom
LLM_PROVIDER=gemini              # gemini | openai | groq | anthropic | custom
TTS_PROVIDER=google              # google | elevenlabs | openai | cartesia | custom

# === LANGUAGE & AGENT MODE ===
LANGUAGE=bn-BD                   # bn-BD (Bangla) | en-US | hi-IN | etc.
AGENT_MODE=receptionist          # receptionist | appointment | support | custom

# === GOOGLE (Gemini LLM + Cloud STT + Cloud TTS) ===
GOOGLE_API_KEY=                  # Gemini API key from aistudio.google.com
GOOGLE_APPLICATION_CREDENTIALS=  # Path to service-account.json (for Cloud STT/TTS)

# === GEMINI LLM OPTIONS ===
GEMINI_MODEL=gemini-2.5-flash    # gemini-2.5-flash | gemini-2.5-pro | gemini-3-flash-preview

# === OPENAI (optional) ===
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini         # gpt-4o-mini | gpt-4o | gpt-4.1-mini

# === ANTHROPIC / CLAUDE (optional) ===
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# === GROQ (optional - ultra fast inference) ===
GROQ_API_KEY=
GROQ_MODEL=qwen-qwq-32b          # qwen-qwq-32b | llama-3.3-70b-versatile | gemma2-9b-it

# === ELEVENLABS (optional) ===
ELEVEN_API_KEY=
ELEVEN_VOICE_ID=pNInz6obpgDQGcFmaJgB   # Default: Adam voice
ELEVEN_MODEL=eleven_multilingual_v2

# === DEEPGRAM (optional) ===
DEEPGRAM_API_KEY=

# === CARTESIA (optional) ===
CARTESIA_API_KEY=

# === CUSTOM MODEL ENDPOINTS (for self-hosted models) ===
CUSTOM_STT_URL=http://localhost:8001/stt    # Your Whisper/BanglaASR endpoint
CUSTOM_TTS_URL=http://localhost:8002/tts    # Your VITS TTS endpoint
CUSTOM_LLM_URL=http://localhost:8003/v1     # OpenAI-compatible endpoint

# === GOOGLE CLOUD TTS OPTIONS ===
GOOGLE_TTS_VOICE=bn-BD-Wavenet-A  # bn-BD-Standard-A/B | bn-BD-Wavenet-A/B
GOOGLE_TTS_SPEAKING_RATE=1.0      # 0.25 to 4.0
GOOGLE_TTS_PITCH=0.0              # -20.0 to 20.0

# === LIVEKIT SERVER ===
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

